input,
textarea {
	/*	Use custom :focus %extend for all form elements
		to keep the :focus style the same for custom ones */
	&:focus {
		@extend $outline;
	}
}

// Custom checkboxes & radios
.checkbox,
.radio {
	position: relative;
	padding-left: 1.25em;

	span:before {
		content: "";
		position: absolute;
		left: 0;
		width: .813em;
		height: .813em;
		border: 1px solid black;
	}
}

.checkbox {
	input[type="checkbox"] {
		opacity: 0;
		position: absolute;

		&:focus + span:before {
			@extend $outline;
		}

		// Checked style addition
		&:checked + span:before {
			content: "âœ“";
		}
	}
}

.radio {
	input[type="radio"] {
		opacity: 0;
		position: absolute;

		&:focus + span:before {
			@extend $outline;
		}

		// Checked style addition
		&:checked + span:after {
			background: black;
		}
	}

	span:after {
		content: "";
		position: absolute;
		top: .25em;
		left: .25em;
		width: .438em;
		height: .438em;
		border-radius: 50%;
	}

	// Base, unchecked style
	span:before {
		border-radius: 50%;
	}
}