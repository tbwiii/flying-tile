.dropdown-nav {
	list-style: none;
	margin: 0;
	padding: 0;

	li {
		position: relative;
		float: left;

		ul {
			position: absolute;
			display: none;
			left: 0;
			list-style: none;
			margin: 0;
			padding: 0;
		}

		&:hover {
			ul {
				display: block;
			}
		}

		.dropdown--open {
			display: block;
		}
	}

	.dropdown-trigger--open {
		&:hover {
			ul {
				display: block;
			}
		}
	}

	.click-setting:hover {
		ul {
			display: none;
		}

		.dropdown--open {
			display: block;
		}
	}
}